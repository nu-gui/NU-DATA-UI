# Sample environment variables for CI/CD workflows
# Copy this file to .env.{environment} and fill in the values

# Database connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nu_data_ui

# Authentication
JWT_SECRET=replace_with_secure_random_string

# Application mode
NODE_ENV=development  # Options: development, staging, production

# External services
ENRICHMENT_ENGINE_URL=http://localhost:5000

# CI mode (enables CI-specific behavior)
CI=true

# Optional: Docker registry for container publishing
# DOCKER_REGISTRY=ghcr.io/nu-gui
